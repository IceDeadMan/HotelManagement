@model List<HotelManagement.ViewModels.ActivityRecordViewModel>
@using HotelManagement.Enums;
<!-- Service Activity Records List View -->
<!-- This view displays a list of service activity records made by guests. -->
<!-- Staff can update the status of activities. -->
@{
    ViewData["Title"] = "Service Activity Records";
}

<div class="container mt-4">
    <h2>Service Requests</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Guest</th>
                <th>Room</th>
                <th>Type</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.GuestName</td>
                    <td>@activity.RoomNumber</td>
                    <td>@activity.Type</td>
                    <td>@activity.Description</td>
                    <td>@activity.Date.ToString("g")</td>

                    <!-- Status Management -->
                    <td>
                        <form asp-action="UpdateStatus" asp-controller="ActivityRecords" method="post">
                            <input type="hidden" name="id" value="@activity.Id" />
                            <div class="d-flex flex-column gap-1">
                                @foreach (ActivityStatus status in Enum.GetValues(typeof(ActivityStatus)))
                                {
                                    var statusStr = status.ToString();
                                    var isChecked = status == activity.Status;
                                    var inputId = $"status_{activity.Id}_{statusStr}";
                                    var labelClass = isChecked
                                        ? "btn btn-sm btn-primary rounded-pill w-100"
                                        : "btn btn-sm btn text-secondary rounded-pill w-100";

                                    <input type="radio" class="btn-check" name="status" value="@statusStr" id="@inputId"
                                           onchange="this.form.submit()" autocomplete="off" checked="@(isChecked)" />
                                    <label class="@labelClass" for="@inputId">@statusStr</label>
                                }
                            </div>
                        </form>
                    </td>

                    <!-- Optional Action Buttons -->
                    <td>
                        <form asp-action="DeleteActivity" asp-controller="ActivityRecords" method="post" onsubmit="return confirm('Are you sure you want to delete this activity record?');">
                            <input type="hidden" name="id" value="@activity.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete(not implemented)</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
