@model List<HotelManagement.Models.Event>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Events List";
    var isAdmin = User.IsInRole("Manager") || User.IsInRole("Staff");
}

<h3>Events List</h3>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">

        @* --- Create Event Card (Admin Only) --- *@
        @if (isAdmin)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-success">
                    <div class="card-body">
                        <form asp-action="CreateEvent" method="post">
                            <h5 class="card-title text-success">Create New Event</h5>

                            <div class="mb-2">
                                <input type="text" name="Name" class="form-control" placeholder="Event Name" required />
                            </div>
                            <div class="mb-2">
                                <textarea name="Description" class="form-control" placeholder="Description" required></textarea>
                            </div>
                            <div class="mb-2">
                                <input type="date" name="DatePart" class="form-control" required />
                            </div>
                            <div class="mb-2">
                                <input type="time" name="TimePart" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <input type="number" name="Capacity" class="form-control" placeholder="Capacity" min="1" required />
                            </div>

                            <button type="submit" class="btn btn-success w-100">Create Event</button>
                        </form>
                    </div>
                </div>
            </div>
        }

        @* --- Existing Events --- *@
        @foreach (var eventItem in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@eventItem.Name</h5>
                        <p class="card-text">@eventItem.Description</p>
                        <hr />
                        <p><strong>Date:</strong> @eventItem.Date.ToString("dd/MM/yyyy")</p>
                        <p><strong>Time:</strong> @eventItem.Date.ToString("HH:mm")</p>
                        <p><strong>Capacity:</strong> @eventItem.Capacity guests</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                        <a asp-action="EventAttend" asp-route-id="@eventItem.Id" class="btn btn-primary">Attend</a>
                        @if (isAdmin)
                        {
                            <form asp-action="DeleteEvent" asp-route-id="@eventItem.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

        