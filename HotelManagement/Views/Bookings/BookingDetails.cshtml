@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model HotelManagement.Models.Booking
@using HotelManagement.Enums
@using System.Globalization;

<!-- Booking Details View -->
<!-- This view displays the details of a booking for the user.-->
@{
    ViewData["Title"] = Localizer["BookingDetails"];
    var nights = (Model.EndDate - Model.StartDate).Days;
}

<h2>@Localizer["MyStay"]</h2>

<p class="@(Model.Status switch {
                        BookingStatus.Pending => "status-pending",
                        BookingStatus.Confirmed => "status-confirmed",
                        BookingStatus.Completed => "status-completed",
                        BookingStatus.Cancelled => "status-cancelled",
                        _ => ""
                    })">
                        @Localizer[Model.Status.ToString()]
                    </p>
<p><strong>@Localizer["CheckIn"]:</strong> @Model.StartDate.ToString("dd.MM.yyyy") @Localizer["After"] 14:00</p>
<p><strong>@Localizer["CheckOut"]:</strong> @Model.EndDate.ToString("dd.MM.yyyy") @Localizer["Until"] 12:00</p>
<p><strong>@Localizer["TotalNights"]:</strong> @nights</p>

<h4>@Localizer["Rooms"]</h4>
<table class="table">
    <thead>
        <tr>
            <th>@Localizer["RoomNumber"]</th>
            <th>@Localizer["Type"]</th>
            <th>@Localizer["Capacity"]</th>
            <th>@Localizer["PriceNight"]</th>
            <th>@Localizer["Subtotal"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            var subtotal = (room.RoomType?.Price ?? 0) * nights;
            <tr class="clickable-row"
                data-room-id="@room.Id"
                data-booking-id="@Model.Id"
                style="cursor:pointer;">
                <td>@room.RoomNumber</td>
                <td>@room.RoomType?.Name</td>
                <td>@room.RoomType?.Capacity</td>
                <td>@room.RoomType?.Price.ToString("N2", CultureInfo.InvariantCulture) €</td>
                <td>@subtotal.ToString("N2", CultureInfo.InvariantCulture) €</td>
            </tr>
        }
    </tbody>
</table>

<!-- Hidden GET form -->
<form id="roomDetailForm" method="get" asp-controller="Bookings" asp-action="BookingRoomDetails" style="display:none;">
    <input type="hidden" name="roomId" id="roomIdInput" />
    <input type="hidden" name="bookingId" id="bookingIdInput" />
</form>

<p class="fw-bold">
    @Localizer["TotalPrice"]: @Model.Rooms.Sum(r => (r.RoomType?.Price ?? 0) * nights).ToString("N2", CultureInfo.InvariantCulture) €
</p>

<a class="btn btn-secondary" asp-action="MyBookings">@Localizer["Back"]</a>

@section Scripts {
    <script>
        document.querySelectorAll('.clickable-row').forEach(row => {
            row.addEventListener('click', function () {
                const roomId = this.dataset.roomId;
                const bookingId = this.dataset.bookingId;

                document.getElementById('roomIdInput').value = roomId;
                document.getElementById('bookingIdInput').value = bookingId;

                document.getElementById('roomDetailForm').submit();
            });
        });
    </script>
}