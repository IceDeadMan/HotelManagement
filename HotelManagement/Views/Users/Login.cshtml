@model HotelManagement.Models.Users.LoginViewModel

<form asp-action="Login" method="post">
    <input asp-for="Username" placeholder="Username" />
    <input asp-for="Password" placeholder="Password" type="password" />
    <input asp-for="RememberMe" type="checkbox" /> Remember me
    <button type="submit">Login</button>
</form>

<div>
    <p>Don't have an account?</p>
    <form asp-action="Register" asp-controller="Users" method="get">
        <button type="submit">Register</button>
    </form>
</div>
