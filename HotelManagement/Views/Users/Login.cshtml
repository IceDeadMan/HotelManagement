@using HotelManagement.ViewModels.Users
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model LoginViewModel

@{
    ViewData["Title"] = Localizer["Login2"];
}

<h3 class="mb-4">@Localizer["Login2"]</h3>

<div class="container mt-4">
    <div class="card shadow-sm border-primary" style="max-width: 500px; margin: 0 auto;">
        <div class="card-body">
            <h5 class="card-title text-primary">@Localizer["Login2"]</h5>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">@Localizer["Username"]</label>
                    <input asp-for="Username" class="form-control" placeholder="@Localizer["Username"]" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" placeholder="@Localizer["Password"]" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">@Localizer["RememberMe"]</label>
                </div>

                @if (ViewBag.LoginFailed == true)
                {
                    <div class="text-danger mb-3">
                        @Localizer["LoginFailedMessage"]
                    </div>
                }

                <button type="submit" class="btn btn-primary">@Localizer["Login2"]</button>
            </form>

            <hr />

            <div class="mt-3">
                <p class="mb-2">@Localizer["NoAccount"]</p>
                <form asp-action="Register" asp-controller="Users" method="get">
                    <button type="submit" class="btn btn-outline-secondary">@Localizer["Register2"]</button>
                </form>
            </div>
        </div>
    </div>

    <div class="alert alert-info p-3 mt-4" style="max-width: 500px; margin: 0 auto;">
        <h5 class="mb-3">User Role Cheat Sheet for Developers</h5>
        <table class="table table-sm table-bordered mb-0">
            <thead class="table-light">
                <tr><th>User</th><th>Role</th></tr>
            </thead>
            <tbody>
                <tr><td>User1</td><td>Customer</td></tr>
                <tr><td>User2</td><td>Manager</td></tr>
                <tr><td>User3</td><td>Staff</td></tr>
                <tr><td>User4</td><td>Receptionist</td></tr>
                <tr><td>User5</td><td>KitchenStaff</td></tr>
            </tbody>
        </table>
    </div>
</div>
