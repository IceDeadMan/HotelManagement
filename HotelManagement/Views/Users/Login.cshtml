@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model HotelManagement.Models.Users.LoginViewModel

<!-- Login View -->
<!-- This view displays the login form for users. -->
<!-- It includes fields for username, password, and a remember me option and Register button -->
<form asp-action="Login" method="post">
    <input asp-for="Username" placeholder="@Localizer["Username"]" />
    <input asp-for="Password" placeholder="@Localizer["Password"]" type="password" />
    <input asp-for="RememberMe" type="checkbox" /> @Localizer["RememberMe"]
    <button type="submit">@Localizer["Login2"]</button>
</form>

<div>
    <p>@Localizer["NoAccount"]</p>
    <form asp-action="Register" asp-controller="Users" method="get">
        <button type="submit">@Localizer["Register2"]</button>
    </form>
</div>
<div class="alert alert-info p-3 mb-4" style="max-width: 400px;">
  <h5>User Role Cheat Sheet for developers</h5>
  <table class="table table-sm table-bordered mb-0">
    <thead>
      <tr><th>User</th><th>Role</th></tr>
    </thead>
    <tbody>
      <tr><td>User1</td><td>Customer</td></tr>
      <tr><td>User2</td><td>Manager</td></tr>
      <tr><td>User3</td><td>Staff</td></tr>
      <tr><td>User4</td><td>Receptionist</td></tr>
      <tr><td>User5</td><td>KitchenStaff</td></tr>
    </tbody>
  </table>
</div>
